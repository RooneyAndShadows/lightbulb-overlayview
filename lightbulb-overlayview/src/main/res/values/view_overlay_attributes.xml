<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="view_overlay_text_preview">text</string>
    <string name="view_overlay_button_text_preview">button</string>

    <declare-styleable name="OverlayView">
        <attr name="overlayColorBackground" format="color" />
        <attr name="overlayColorBackgroundAlpha" format="integer" />
        <attr name="overlayLayout" format="reference" />
        <attr name="overlayShowing" format="boolean" />
    </declare-styleable>

    <style name="ViewOverlayTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ViewOverlayTheme.content">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ViewOverlayTheme.image">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ViewOverlayTheme.text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ViewOverlayTheme.text.title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ViewOverlayTheme.text.description" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ViewOverlayTheme.actionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>